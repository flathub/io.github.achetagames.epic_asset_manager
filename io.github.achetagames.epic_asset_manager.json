{
  "app-id": "io.github.achetagames.epic_asset_manager",
  "runtime": "org.gnome.Platform",
  "runtime-version": "41",
  "sdk": "org.gnome.Sdk",
  "command": "epic_asset_manager",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "finish-args": [
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=network",
    "--filesystem=host",
    "--talk-name=org.freedesktop.secrets",
    "--device=dri",
    "--env=G_MESSAGES_DEBUG=none"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "RUST_BACKTRACE": "1"
    }
  },
  "modules": [
    {
      "name" : "libadwaita",
      "buildsystem" : "meson",
      "config-opts" : [
        "-Dintrospection=disabled",
        "-Dgtk_doc=false",
        "-Dtests=false",
        "-Dexamples=false",
        "-Dvapi=false"
      ],
      "cleanup" : [
        "/include",
        "/lib/pkgconfig"
      ],
      "sources" : [
        {
          "type" : "git",
          "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
          "tag": "1.0.0.alpha.3",
          "commit" : "40c19ab2591763a482ebc79c82f1da32eea3bab6"
        }
      ],
      "modules" : [
        {
          "name" : "libsass",
          "buildsystem" : "meson",
          "sources" : [
            {
              "type" : "git",
              "url" : "https://github.com/lazka/libsass.git",
              "branch" : "meson",
              "commit" : "302397c0c8ae2d7ab02f45ea461c2c3d768f248e"
            }
          ]
        },
        {
          "name" : "sassc",
          "buildsystem" : "meson",
          "sources" : [
            {
              "type" : "git",
              "url" : "https://github.com/lazka/sassc.git",
              "branch" : "meson",
              "commit" : "82803377c33247265d779af034eceb5949e78354"
            }
          ]
        }
      ]
    },
    {
      "name": "epic_asset_manager",
      "buildsystem": "meson",
      "run-tests": true,
      "config-opts": [
        "-Dprofile=default"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/AchetaGames/Epic-Asset-Manager/releases/download/v2.7.3/epic_asset_manager-2.7.3.tar.xz",
          "sha256": "00af0dac3a04d1a48fcaa373b30b1143b9fd257de17f6ff8467c328fa00caa1b"
        }
      ]
    }
  ]
}

