{
  "app-id": "io.github.achetagames.epic_asset_manager",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "command": "epic_asset_manager",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "finish-args": [
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=network",
    "--filesystem=host",
    "--talk-name=org.freedesktop.secrets",
    "--talk-name=org.freedesktop.Flatpak",
    "--device=dri",
    "--env=G_MESSAGES_DEBUG=none"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "RUST_BACKTRACE": "1"
    }
  },
  "modules": [
    {
      "name": "epic_asset_manager",
      "buildsystem": "meson",
      "run-tests": true,
      "config-opts": [
        "-Dprofile=default"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/AchetaGames/Epic-Asset-Manager/releases/download/v3.0.3/epic_asset_manager-3.0.3.tar.xz",
          "sha256": "4b4f66f709a1ec55685f5fe8f8034a2ba7282e094cc2095c10be16470ec92d9b"
        }
      ]
    }
  ]
}

