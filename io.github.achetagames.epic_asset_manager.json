{
  "app-id": "io.github.achetagames.epic_asset_manager",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "command": "epic_asset_manager",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "finish-args": [
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=ipc",
    "--share=network",
    "--filesystem=host",
    "--talk-name=org.freedesktop.secrets",
    "--talk-name=org.freedesktop.Flatpak",
    "--device=dri",
    "--env=G_MESSAGES_DEBUG=none",
    "--env=RUST_LOG=epic_asset_manager=trace"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "RUST_BACKTRACE": "1"
    }
  },
  "modules": [
    {
      "name": "epic_asset_manager",
      "buildsystem": "meson",
      "run-tests": true,
      "config-opts": [
        "-Dprofile=default"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/AchetaGames/Epic-Asset-Manager/releases/download/v3.6.2/epic_asset_manager-3.6.2.tar.xz",
          "sha256": "d060364941a7fad6b42b4dd02dedb5c08bf635d50fa7ce5ce2ebbc35d73e821c"
        }
      ]
    }
  ]
}

