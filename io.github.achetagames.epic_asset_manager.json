{
  "app-id": "io.github.achetagames.epic_asset_manager",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "command": "epic_asset_manager",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "finish-args": [
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=network",
    "--filesystem=host",
    "--talk-name=org.freedesktop.secrets",
    "--talk-name=org.freedesktop.Flatpak",
    "--device=dri",
    "--env=G_MESSAGES_DEBUG=none"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "RUST_BACKTRACE": "1"
    }
  },
  "modules": [
    {
      "name": "epic_asset_manager",
      "buildsystem": "meson",
      "run-tests": true,
      "config-opts": [
        "-Dprofile=default"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/AchetaGames/Epic-Asset-Manager/releases/download/v3.1.2/epic_asset_manager-3.1.2.tar.xz",
          "sha256": "1dea9750966170740fb0ce83bc944231433c5dddfc649c18990aad74e707b6be"
        }
      ]
    }
  ]
}

